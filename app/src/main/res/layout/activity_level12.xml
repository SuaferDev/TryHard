<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Level12">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#000000"
                android:gravity="center"
                android:text="10 -> 0"
                android:layout_marginBottom="10dp"
                android:textSize="30sp"
                app:fontFamily="@font/mainfont"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D5D5D5"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/field0"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#000000" />
                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#5B5B5B"/>

                    <TextView
                        android:id="@+id/field1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="-9"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont" />

                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#5B5B5B"/>
                    <TextView
                        android:id="@+id/field2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="-3"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:padding="8dp"
                    android:background="#5B5B5B"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5B5B5B"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/field3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="-4"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#5B5B5B"/>
                    <TextView
                        android:id="@+id/field4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#5B5B5B"/>
                    <TextView
                        android:id="@+id/field5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear44"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:padding="8dp"
                    android:background="#5B5B5B"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/field6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="-3"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#5B5B5B"/>
                    <TextView
                        android:id="@+id/field7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#5B5B5B"/>
                    <TextView
                        android:id="@+id/field8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="-7"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/buttonUpdate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/update_image"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/linearnavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/level_navigation_white_corner"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_black"/>

            <TextView
                android:id="@+id/textlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Уровень 11"
                android:textColor="#000000"
                app:fontFamily="@font/mainfont"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imagehelp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/help_black"/>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>