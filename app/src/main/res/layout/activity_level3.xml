                android:hint=" "
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:textColorHint="#757575"
                android:maxLength="1"
                android:maxLines="1"
                android:lines="1"/>
            <EditText
                android:id="@+id/edittext24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="24sp"
                app:fontFamily="@font/mainfont"
                android:gravity="center"
                android:hint=" "
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:textColorHint="#757575"
                android:maxLength="1"
                android:maxLines="1"
                android:lines="1"/>
            <EditText
                android:id="@+id/edittext25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="24sp"
                app:fontFamily="@font/mainfont"
                android:gravity="center"
                android:hint=" "
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:textColorHint="#757575"
                android:maxLength="1"
                android:maxLines="1"
                android:lines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="бахромой."
                android:textSize="24sp"
                app:fontFamily="@font/mainfont"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageendlevel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:src="@drawable/endlevel"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/linearnavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/level_navigation_white_corner"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_black"/>

            <TextView
                android:id="@+id/textlevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Уровень 3"
                android:textColor="#000000"
                app:fontFamily="@font/mainfont"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imagehelp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/help_black"/>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>