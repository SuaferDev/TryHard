<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/level_navigation_white_corner"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" Сброс "
            android:textColor="#FFFFFF"
            android:background="#000000"
            app:fontFamily="@font/mainfont"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="4dp"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            app:fontFamily="@font/mainfont"
            android:textStyle="bold"
            android:text="{ Вы можете сбросить прогресс, нажав на кнопку ниже. Перед сбросом поммните, что данное действие нельзя обратить! }"
            android:gravity="center"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/button_Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Сбросить прогресс"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/mainfont"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_weight="1"
            android:background="@drawable/use_help_on"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>